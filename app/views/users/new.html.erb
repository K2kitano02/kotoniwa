<%= render "shared/error_message", object: @user %>
<%= form_with model: @user, url: signup_path, method: :post, local: true do|f| %>
<div class="flex flex-col items-center justify-center h-screen">
  <div class="w-full max-w-md">
    <h1 class="text-2xl font-bold mb-4">新規登録</h1>
    <%= f.text_field :name, placeholder: "名前", class: "w-full p-2 border border-gray-300 rounded-md mb-4" %>
    <%= f.email_field :email, value: params[:email], placeholder: "メールアドレス", class: "w-full p-2 border border-gray-300 rounded-md mb-4" %>
    <%= f.password_field :password, placeholder: "パスワード", class: "w-full p-2 border border-gray-300 rounded-md mb-4" %>
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "w-full p-2 border border-gray-300 rounded-md mb-4" %>
    <%= f.submit "新規登録", class: "w-full p-2 bg-blue-500 text-white rounded-md" %>
  </div>
</div>
<% end %>