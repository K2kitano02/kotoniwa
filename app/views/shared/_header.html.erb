<header class="w-full z-50 bg-white/80 dark:bg-[#0d150d]/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    <div class="flex items-center gap-2">
      <span class="material-symbols-outlined text-primary text-3xl">eco</span>
      <span class="text-xl font-semibold tracking-widest">言庭</span>
    </div>
    <nav class="hidden md:flex items-center gap-8 text-sm tracking-widest">
      <% if current_user %>
        <%= button_to "ログアウト", logout_path, method: :delete, class: "hover:text-primary transition-colors bg-transparent border-none cursor-pointer p-0 font-inherit text-sm tracking-widest" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "hover:text-primary transition-colors" %>
        <%= link_to "新規登録", signup_path, class: "px-4 py-2 bg-slate-900 dark:bg-slate-100 text-white dark:text-slate-900 rounded-full hover:opacity-80 transition-all" %>
      <% end %>
    </nav>
  </div>
</header>